article.container.pad-t-10.pad-b-10
    .panel.panel-default
        h3.panel-heading.mar-b-10 Lista de páginas
        .panel-body
          .row.mar-b-20
            .col-lg-3
              .input-group
                input.form-control(type='text', ng-model='searchText')
                span.input-group-addon
                  span.icon-search
          table.table.table-hover
            thead
              tr
                th Página
                th Descrição
                th Preview
            tbody
              tr.list-animate(ng-repeat='page in pages | filter : searchText')
                td
                    a.link--unstyled.fs-28(href='#!/telas/show/{{page.slug}}')
                        span.icon-file
                td {{page.name}}
                td {{page.description}}

